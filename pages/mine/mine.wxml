    </navigator>
  </view>
  <!-- <view wx:if="{{hasRegist && !hasUserInfo}}"> -->
  <button wx:if="{{hasRegist && !hasUserInfo}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">点击微信授权 </button>

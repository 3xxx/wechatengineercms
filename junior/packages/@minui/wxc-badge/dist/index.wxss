.badge {
    display: inline-block;
    min-width: 19rpx;
    height: 30rpx;
    line-height: 30rpx;
    padding: 0 6rpx;
    font-size: 22rpx;
    text-align: center;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    color: #FFF;
    background: #f5342f;
    border-radius: 18rpx;
    overflow: hidden;
  }
  .badge__system--android {
    line-height: 33rpx;
    font-size: 21.5rpx;
    text-indent: 1rpx;
    padding: 0 7rpx 0 6rpx;
  }
  .badge__type--dot {
    min-width: auto;
    width: 16rpx;
    height: 16rpx;
    padding: 0;
    border-radius: 50%;
  }
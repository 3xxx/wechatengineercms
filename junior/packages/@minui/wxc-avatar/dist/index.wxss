.avatar {
    display: inline-block;
    position: relative;
    width: 100%;
    height: 100%;
  }
  .avatar__pic {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }
  .avatar__mold--circle {
    border-radius: 50%;
  }
  .avatar__badge {
    position: absolute;
    top: -8rpx;
    right: -8rpx;
    z-index: 1;
  }